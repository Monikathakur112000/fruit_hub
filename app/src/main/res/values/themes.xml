<resources>
    <!-- Base application theme. -->
    <style name="Theme.FruitHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sunshade</item>
        <item name="colorPrimaryVariant">@color/sunshade</item>
        <item name="colorOnPrimary">@color/sunshade</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/sunshade</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!--ImageView Style-->
    <style name="ImageViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- style for TextView -->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/paua</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ttnorms_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--EditText Style-->
    <style name="EditTextStyle">
        <item name="android:textColor">@color/sunshade</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:singleLine">true</item>
        <item name="fontFamily">@font/ttnorms_medium</item>
        <item name="android:maxLines">1</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="backgroundTint">@color/white_smoke</item>
        <item name="android:background">@drawable/btn_edittext_normal</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>


    <!-- style for ButtonStyle -->
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:background">@drawable/btn_design_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ttnorms_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    <!--Tab Layout Style-->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ttnorms_regular</item>
    </style>

    <!-- ToggleButtonStyle -->
    <style name="toggleButtonStyle">
        <item name="android:textOn" />
        <item name="android:textOff" />
    </style>
</resources>